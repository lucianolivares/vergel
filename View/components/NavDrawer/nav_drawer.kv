<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: app.theme_cls.primary_color
    text_color: app.theme_cls.opposite_bg_dark
    icon_color: app.theme_cls.opposite_bg_dark
    selected_color: app.theme_cls.primary_dark
    radius: 10
    text_color:
        ( \
        app.theme_cls.text_color \
        if not root.icon_color else \
        root.icon_color \
        ) \
        if not root.selected else \
        root.selected_color

<MDNavigationDrawer>:
    id: nav_drawer
    main: main
    plagas: plagas
    radius: (0, 16, 16, 0) if self.anchor == "left" else (16, 0, 0, 16)

    MDNavigationDrawerMenu:

        MDNavigationDrawerHeader:
            title: "Vergel"
            title_font_style: "H3"
            padding: "12dp", 0, 0, "20dp"

        MDNavigationDrawerLabel:
            text: "Jardin"

        DrawerClickableItem:
            id: main
            icon: "tree"
            selected: True
            text: "Men√∫ Principal"
            on_release: 
                root.set_state()
                app.manager_screens.current = "main screen"

        DrawerClickableItem:
            id: plagas
            icon: "spray"
            text: "Plagas"
            on_release:
                root.set_state()
                app.manager_screens.current = "plagas screen"
